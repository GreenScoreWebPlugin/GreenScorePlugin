{
    "manifest_version": 2,
    "name": "Web Analyzer",
    "version": "1.0",
    "description": "Analyse r√©seau pour Firefox",
    "permissions": [
      "<all_urls>",
      "webRequest",
      "webRequestBlocking",
      "webNavigation",
      "tabs",
      "http://127.0.0.1/*"
    ],
    "background": {
      "scripts": ["src/background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Analyser la page"
    }
  }
  