</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
    // Fonction pour masquer/afficher les flèches selon la taille d'écran
    function updateNavVisibility() {
        const prevButton = document.querySelector('.swiper-button-prev');
        const nextButton = document.querySelector('.swiper-button-next');
        
        if (window.innerWidth < 1024) {
            // Masquer les flèches sur mobile/tablette
            prevButton.classList.add('swiper-button-hidden');
            nextButton.classList.add('swiper-button-hidden');
        } else {
            // Afficher les flèches sur desktop
            prevButton.classList.remove('swiper-button-hidden');
            nextButton.classList.remove('swiper-button-hidden');
        }
    }

    var swiper = new Swiper('.advice-swiper', {
        slidesPerView: 1,
        spaceBetween: 25,
        loop: true,
        loopFillGroupWithBlank: true,
        pagination: {
            el: '.swiper-pagination',
            clickable: true
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev'
        },
        breakpoints: {
            640: {
                slidesPerView: 1,
                spaceBetween: 25
            },
            1024: {
                slidesPerView: 3,
                spaceBetween: 25,
                slidesPerGroup: 1
            }
        },
        speed: 400,
        watchSlidesProgress: true,
        watchSlidesVisibility: true,
        centeredSlides: true,
        initialSlide: 0,
        on: {
            init: function () {
                // Vérifier la visibilité des flèches lors de l'initialisation
                updateNavVisibility();
            },
            resize: function () {
                // Mettre à jour la visibilité des flèches lors du redimensionnement
                updateNavVisibility();
            }
        }
    });

    // Vérifier également la visibilité au chargement initial de la page
    updateNavVisibility();

    // Ajouter un écouteur d'événement pour les changements de taille d'écran
    window.addEventListener('resize', updateNavVisibility);
});
</script>

