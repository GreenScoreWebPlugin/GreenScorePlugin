{% extends 'base.html.twig' %}

{% block title %}GreenScore - Mon organisation{% endblock %}

{% block body %}
    <script>
        // Get modal elements
        document.addEventListener('DOMContentLoaded', function () {
            const modal = document.getElementById('myModal');

            // Délégation pour ouvrir la modal
            document.body.addEventListener('click', function (event) {
                if (event.target && event.target.id === 'openModal') {
                    modal.classList.remove('hidden');
                }
            });

            // Délégation pour fermer la modal
            document.body.addEventListener('click', function (event) {
                if (event.target && event.target.id === 'closeModal') {
                    modal.classList.add('hidden');
                }
            });

            // Optional: Fermer la modal en cliquant à l'extérieur
            window.addEventListener('click', function (event) {
                if (event.target === modal) {
                    modal.classList.add('hidden');
                }
            });
        });
    </script>
    {{ include('my_account/_message.html.twig') }}

    <div class="px-52 flex flex-col">
        <div class="px-16 py-8 flex items-center gap-x-4">
            <img class="w-[54px] h-auto" src="{{ asset('images/salutation.png') }}" alt="Salutation">
            <h1 class="text-2xl font-bold">Bonjour {{ user.firstName }}!</h1>
        </div>
        <div class="flex px-16 gap-x-16">
            <div class=" flex-grid h-28 min-w-60 drop-shadow-lg bg-white">
                {{ include('my_account/_left_menu_my_account.html.twig') }}
            </div>
            <div class="grid gap-y-4 drop-shadow-lg bg-white py-4 px-6 w-full">
                <div class="">
                    <h1 class="text-xl font-semibold">
                        {{ organisation.organisationName }}
                    </h1>
                </div>
                <div class="flex rounded-2xl border border-grey-100 items-center w-full">
                    <div class="border-r border-grey-100 w-full items-center justify-center py-4">
                        <p class="text-grey-950 text-center text-3xl font-outfit font-semibold ">{{ organisation.organisationCode }}</p>
                    </div>
                    <div class="px-4 py-4 flex flex-col items-center justify-center">
                        <img src="{{ asset('/images/clipboard.svg') }}" alt="Copier le texte">
                    </div>
                </div>
                <div class="flex gap-x-4">
                    <button type="submit" class="w-full h-fit rounded-lg bg-red-600 px-1 py-2 font-semibold font-outfit text-white">Quitter</button>
                    <button id="openModal" type="submit" class="w-full h-fit rounded-lg bg-blue-600 px-1 py-2 font-semibold font-outfit text-white">Changer d'organisation</button>

                    <!-- Modal -->
                    <div id="myModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
                        <div class="bg-white rounded-lg w-1/3 p-6">
                            <h2 class="text-2xl font-bold mb-4">Modal Title</h2>
                            <p>This is a simple modal with Tailwind CSS.</p>
                            <div class="mt-6 flex justify-end">
                                <button id="closeModal" class="bg-red-500 text-white px-4 py-2 rounded-md">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
