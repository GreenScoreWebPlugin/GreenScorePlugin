{% block title %}
    <title>
        GreenScore - Inscription
    </title>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    <div class="flex items-center w-screen h-screen">
        <img src="{{ asset("/images/register-image1.png") }}" alt="GreenScore" class="hidden xl:flex w-1/2 h-full object-cover">
        <div class="w-full xl:w-1/2 h-full px-6 md:px-[120px] py-24 flex items-center justify-center">
            <div class="flex flex-col gap-10">
                <div class="flex gap-2 items-center">
                    <img width="55px" height="auto" src="{{ asset('/images/greenscore-logo.png') }}" alt="GreenScore Logo">
                    <h1 class="text-3xl font-outfit font-extrabold text-gs-green-950">GreenScore</h1>
                </div>
                <div class="flex flex-col gap-4 font-outfit">
                    <h2 class="text-2xl font-extrabold text-grey-950">Observez l’empreinte carbonne de votre organisation sur le web !</h2>
                    <div class="flex gap-[10px] px-1 border border-grey-200 rounded-full py-1 w-fit font-medium">
                        <a href="{{ path('app_login') }}" class="rounded-full px-4 py-1 text-[#979797] decoration-0">
                            J'ai déjà un compte
                        </a>
                        <a href="{{ path('app_register') }}" class="text-white rounded-full px-4 py-1 bg-lime-600 decoration-0">
                            Inscription
                        </a>
                    </div>
                </div>

                {{ form_start(registrationForm, { attr: { class: 'flex flex-col gap-4', novalidate: 'novalidate' } }) }}

                <div class="flex gap-4 w-full text-grey-700 font-outfit font-semibold text-sm sm:flex-row">
                    <div class="w-full">
                        {{ form_label(registrationForm.organisationName) }}
                        {{ form_widget(registrationForm.organisationName, { attr: { class: 'px-4 py-2 border border-grey-200 rounded-lg text-grey-700 w-full focus:outline-none' } }) }}
                        {% for error in registrationForm.organisationName.vars.errors %}
                            <div class="text-red-700 text-sm">{{ error.message }}</div>
                        {% endfor %}
                    </div>
                </div>

                <div class="flex gap-4 w-full text-grey-700 font-outfit font-semibold text-sm sm:flex-row">
                    <div class="w-full">
                        {{ form_label(registrationForm.siret) }}
                        {{ form_widget(registrationForm.siret, { attr: { class: 'px-4 py-2 border border-grey-200 rounded-lg text-grey-700 w-full focus:outline-none' } }) }}
                        {% for error in registrationForm.siret.vars.errors %}
                            <div class="text-red-700 text-sm">{{ error.message }}</div>
                        {% endfor %}
                    </div>
                </div>

                <div class="flex gap-4 w-full text-grey-700 font-outfit font-semibold text-sm sm:flex-row">
                    <div class="w-full">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email, { attr: { class: 'px-4 py-2 border border-grey-200 rounded-lg text-grey-700 w-full focus:outline-none' } }) }}
                        {% for error in registrationForm.email.vars.errors %}
                            <div class="text-red-700 text-sm">{{ error.message }}</div>
                        {% endfor %}
                    </div>
                </div>

                <div class="flex flex-col md:flex-row gap-4 w-full text-grey-700 font-outfit font-semibold text-sm sm:flex-row">
                    <div class="w-full">
                        {{ form_label(registrationForm.plainPassword) }}
                        {{ form_widget(registrationForm.plainPassword, { attr: { class: 'px-4 py-2 border border-grey-200 rounded-lg text-grey-700 w-full focus:outline-none' } }) }}
                        {% for error in registrationForm.plainPassword.vars.errors %}
                            <div class="text-red-700 text-sm">{{ error.message }}</div>
                        {% endfor %}
                    </div>
                    <div class="w-full">
                        {{ form_label(registrationForm.passwordConfirmation) }}
                        {{ form_widget(registrationForm.passwordConfirmation, { attr: { class: 'px-4 py-2 border border-grey-200 rounded-lg text-grey-700 w-full focus:outline-none' } }) }}
                        {% for error in registrationForm.passwordConfirmation.vars.errors %}
                            <div class="text-red-700 text-sm">{{ error.message }}</div>
                        {% endfor %}
                    </div>
                </div>

                <div class="flex flex-col gap-2 text-grey-700 font-semibold text-sm font-outfit">
                    <div class="flex gap-2 items-start">
                        {{ form_widget(registrationForm.agreeTerms, { attr: { class: 'w-4 h-4 rounded text-grey-950 bg-gray-100 border-gray-700' } }) }}
                        {{ form_label(registrationForm.agreeTerms) }}
                    </div>
                    {% for error in registrationForm.agreeTerms.vars.errors %}
                        <div class="text-red-700 text-sm">{{ error.message }}</div>
                    {% endfor %}
                </div>

                <button type="submit" class="w-full h-fit rounded-lg bg-gs-green-950 px-1 py-2 font-semibold font-outfit text-white">Inscription</button>

                <a href="{{ path('app_register') }}" class="text-grey-950 font-outfit font-semibold text-sm text-center">
                    Je suis un utilisateur
                </a>
                {{ form_end(registrationForm) }}

            </div>
        </div>
    </div>
{% endblock %}