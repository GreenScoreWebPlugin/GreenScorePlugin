{% extends 'base.html.twig' %}

{% block title %}{{title}} | GreenScore Web{% endblock %}

{% block body %}

<div class="w-full bg-green-bg min-h-screen">
    <!-- Top -->
    {% include 'dashboards/_top.html.twig' with {title: title, description: description, link: link } %}

    {% if not noDatas %}
    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 gap-6 p-10 sm:grid-cols-2 lg:grid-cols-12">
        {% include 'widgets/_infos_green_score.html.twig' with {letterGreenScore: letterGreenScore} %}
        {% include 'widgets/_country_carbon_intensity.html.twig' with {country: country, carbonIntensity: carbonIntensity, flagUrl: flagUrl} %}
        {% include 'widgets/_badge_green_score.html.twig' with {letterGreenScore: letterGreenScore, envNomination: envNomination} %}
        {% include 'widgets/_equivalent.html.twig' with {equivalent: equivalent1, order: 1} %}
        {% include 'widgets/_total_consumption.html.twig' with {totalConsu: totalConsu, totalConsuUnit: totalConsuUnit, label:'Emission carbone de la page :'} %}
        {% include 'widgets/_equivalent.html.twig' with {equivalent: equivalent2, order: 2} %}
        {% include 'widgets/_page_in_numbers.html.twig' with {pageSize: pageSize,loadingTime: loadingTime, queriesQuantity: queriesQuantity, pageSizeUnit: pageSizeUnit} %}
        {% include 'widgets/_advice.html.twig' with {type: "lambda", advice: advice} %}
        {% include 'widgets/_advice.html.twig' with {type: "dev", advice: adviceDev} %}
    </div>
    {% else %}
        <div class="w-full h-screen flex items-center justify-center font-outfit">
            <p class="text-2xl text-gray-600 font-medium">Vous n'avez pas encore analys√© de pages web avec notre plugin</p>
        </div>
    {% endif %}
</div>

{% endblock %}