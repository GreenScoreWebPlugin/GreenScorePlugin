<h1 class="text-2xl font-bold py-2">Mes informations</h1>
{{ form_start(MyAccountForm, { attr: { class: 'flex flex-col gap-4' } })}}
<div class="flex gap-4 w-full text-grey-700 font-outfit font-semibold text-sm sm:flex-row">
    <div class="w-full">
        {{ form_label(MyAccountForm.organisationName) }}
        {{ form_widget(MyAccountForm.organisationName, { attr: { class: 'px-4 py-2 border border-grey-200 rounded-lg text-grey-700 w-full focus:outline-none' } }) }}
    </div>
</div>
<div class="flex gap-4 w-full text-grey-700 font-outfit font-semibold text-sm sm:flex-row">
    <div class="w-full">
        {{ form_label(MyAccountForm.siret) }}
        {{ form_widget(MyAccountForm.siret, { attr: { class: 'px-4 py-2 border border-grey-200 rounded-lg text-grey-700 w-full focus:outline-none' } }) }}
    </div>
</div>

<div class="flex flex-col gap-4" data-controller="copy-clipboard">
    <h1 class="font-outfit text-2xl font-semibold">Code de l'organisation</h1>
    <div class="flex flex-col gap-4">
        <div class="flex rounded-2xl border border-grey-100 items-center w-full">
            <div class="border-r border-grey-100 w-full items-center justify-center py-4">
                <p data-copy-clipboard-target="codeText" id="code-text" class="text-grey-950 text-center text-3xl font-outfit font-semibold tracking-widest">{{ organisation.organisationCode }}</p>
            </div>
            <div class="px-4 py-4 flex flex-col items-center justify-center relative">
                <img data-copy-clipboard-target="clipboard" data-action="click->copy-clipboard#handleCopy" src="{{ asset('/images/clipboard.svg') }}" alt="Copier le texte" class="scale-105 cursor-pointer transition-transform duration-200 hover:scale-110"/>
                <i data-copy-clipboard-target="checkIcon" class="fa-solid fa-check text-gs-green-950 absolute text-2xl animate-pulse invisible" id="check-icon"></i>
            </div>
        </div>
    </div>
</div>

{% for message in app.flashes('error') %}
    <div class="text-red-700 text-sm">{{ message }}</div>
{% endfor %}

<button type="submit" class="w-full h-fit rounded-lg bg-gs-green-950 px-1 py-2 font-semibold font-outfit text-white">Valider</button>
{{ form_end(MyAccountForm) }}