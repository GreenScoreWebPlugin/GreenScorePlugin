<h1 class="text-2xl font-bold py-2">Mes informations</h1>
{{ form_start(MyAccountForm, { attr: { class: 'flex flex-col gap-4' } })}}
<div class="flex gap-4 w-full text-grey-700 font-outfit font-semibold text-sm sm:flex-row">
    <div class="w-full">
        {{ form_label(MyAccountForm.organisationName) }}
        {{ form_widget(MyAccountForm.organisationName, { attr: { class: 'px-4 py-2 border border-grey-200 rounded-lg text-grey-700 w-full focus:outline-none' } }) }}
    </div>
</div>
<div class="flex gap-4 w-full text-grey-700 font-outfit font-semibold text-sm sm:flex-row">
    <div class="w-full">
        {{ form_label(MyAccountForm.siret) }}
        {{ form_widget(MyAccountForm.siret, { attr: { class: 'px-4 py-2 border border-grey-200 rounded-lg text-grey-700 w-full focus:outline-none' } }) }}
    </div>
</div>

<div class="flex gap-4 w-full text-grey-700 font-outfit font-semibold text-sm sm:flex-row">
    <div class="w-full">
        {{ form_label(MyAccountForm.email) }}
        {{ form_widget(MyAccountForm.email, { attr: { class: 'px-4 py-2 border border-grey-200 rounded-lg text-grey-700 w-full focus:outline-none' } }) }}
        {% for error in MyAccountForm.email.vars.errors %}
            <div class="text-red-700 text-sm">{{ error.message }}</div>
        {% endfor %}
    </div>
</div>

<div class="flex gap-4 w-full text-grey-700 font-outfit font-semibold text-sm sm:flex-row">
    <div class="w-full">
        {{ form_label(MyAccountForm.plainPassword) }}
        {{ form_widget(MyAccountForm.plainPassword, { attr: { class: 'px-4 py-2 border border-grey-200 rounded-lg text-grey-700 w-full focus:outline-none' } }) }}
        {% for error in MyAccountForm.plainPassword.vars.errors %}
            <div class="text-red-700 text-sm">{{ error.message }}</div>
        {% endfor %}
    </div>
    <div class="w-full">
        {{ form_label(MyAccountForm.passwordConfirmation) }}
        {{ form_widget(MyAccountForm.passwordConfirmation, { attr: { class: 'px-4 py-2 border border-grey-200 rounded-lg text-grey-700 w-full focus:outline-none' } }) }}
        {% for error in MyAccountForm.passwordConfirmation.vars.errors %}
            <div class="text-red-700 text-sm">{{ error.message }}</div>
        {% endfor %}
    </div>
</div>

{% for message in app.flashes('error') %}
    <div class="text-red-700 text-sm">{{ message }}</div>
{% endfor %}

<button type="submit" class="w-full h-fit rounded-lg bg-gs-green-950 px-1 py-2 font-semibold font-outfit text-white">Valider</button>
{{ form_end(MyAccountForm) }}