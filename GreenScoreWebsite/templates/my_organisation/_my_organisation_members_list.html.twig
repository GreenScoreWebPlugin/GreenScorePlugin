{% for member in members %}
    <div class="flex py-3 items-center justify-between w-full border-b border-grey-200 last:border-b-0 font-outfit">
        <div class="flex flex-col">
            {% if member.firstName and member.lastName %}
                <p class="text-sm font-medium text-gray-950">{{ member.firstName }} {{ member.lastName }}</p>
            {% endif %}
            <p class="text-xs text-gray-500">{{ member.email }}</p>
        </div>
        <button
                data-action="click->member-delete#openModal"
                data-member-delete-target="deleteButton"
                data-member-id="{{ member.id }}"
                class="hover:scale-110 transition-transform duration-200"
        >
            <i class="fa-solid fa-minus text-red-600 text-xl"></i>
        </button>
    </div>
{% endfor %}

<div
        data-member-delete-target="modal"
        class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden"
>
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
        <h2 class="text-xl font-semibold mb-4">Confirmer la suppression</h2>
        <p class="text-gray-600 mb-6">Êtes-vous sûr de vouloir supprimer ce membre de l'organisation ?</p>
        <div class="flex justify-end gap-4">
            <button
                    data-action="click->member-delete#closeModal"
                    class="px-4 py-2 text-gray-600 hover:text-gray-800 font-medium"
            >
                Annuler
            </button>
            <button
                    data-action="click->member-delete#deleteMember"
                    class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 font-medium"
            >
                Confirmer
            </button>
        </div>
    </div>
</div>